<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="16dp">

  <android.support.v7.widget.CardView
    android:id="@+id/flight_card_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:padding="16dp">

      <LinearLayout
        android:layout_width="321dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        >

        <ImageView
          android:id="@+id/first_plane"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@drawable/ic_flight_black"
          android:layout_gravity="center"
          />

        <TextView
          android:id="@+id/airport_code_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toLeftOf="@id/first_plane"
          android:paddingLeft="35dp"
          android:layout_gravity="center"
          android:text="ABQ"
          android:textColor="@android:color/black"
          android:textSize="30sp"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/airport_code_2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toLeftOf="@id/airport_code_1"
          android:paddingLeft="35dp"
          android:layout_gravity="center"
          android:text="LAX"
          android:textColor="@android:color/black"
          android:textSize="30sp"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/flight_length"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:paddingLeft="35dp"
          android:layout_toLeftOf="@id/airport_code_2"
          android:layout_gravity="center"
          android:text="1 hr 16 m"
          android:textColor="@android:color/darker_gray"
          android:textSize="20sp"
          />

      </LinearLayout>


      <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/center_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        >

        <!--Expand Shown-->
        <ImageView
          android:id="@+id/plane_outbound_icon"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_alignParentTop="true"
          android:src="@drawable/ic_flight_black" />

        <!--Expand Show-->
        <TextView
          android:id="@+id/flight_number"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/plane_outbound_icon"
          android:gravity="center"
          android:paddingTop="5sp"
          android:text="SWA 1202"
          android:textAlignment="center"
          android:textSize="15sp" />

        <!--Expand Show-->
        <TextView
          android:id="@+id/flight_confirmation"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/flight_number"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="-5dp"
          android:gravity="center"
          android:paddingTop="5sp"
          android:text="PXOPR9"
          android:textAlignment="center"
          android:textSize="15sp" />

      </android.support.v7.widget.LinearLayoutCompat>

      <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/left_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">
        <!--Expand Shown-->
        <TextView
          android:id="@+id/airport_code_outbound"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:gravity="center"
          android:text="ABQ"
          android:textAlignment="center"
          android:textSize="30sp"
          android:textStyle="bold" />

        <!--Expand Shown-->
        <TextView
          android:id="@+id/departure_date"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/airport_code_outbound"
          android:layout_centerHorizontal="true"
          android:gravity="center"
          android:text="APR 7"
          android:textAlignment="center"
          android:textColor="@android:color/black"
          android:textSize="15sp" />

        <!--Expand Shown-->
        <TextView
          android:id="@+id/departure_time"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/departure_date"
          android:layout_centerHorizontal="true"
          android:gravity="center"
          android:text="11:45a"
          android:textAlignment="center"
          android:textColor="@android:color/black"
          android:textSize="15sp" />

      </android.support.v7.widget.LinearLayoutCompat>

      <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/right_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">
        <!--Expand Shown-->
        <TextView
          android:id="@+id/airport_code_arrival"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_alignParentRight="true"
          android:layout_centerHorizontal="true"
          android:gravity="center"
          android:text="LAX"
          android:textAlignment="center"
          android:textSize="30sp"
          android:textStyle="bold" />


        <!--Expand Shown-->
        <TextView
          android:id="@+id/arrival_date"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/airport_code_arrival"
          android:gravity="center"
          android:text="APR 7"
          android:textAlignment="center"
          android:textColor="@android:color/black"
          android:textSize="15sp" />

        <!--Expand  Shown-->
        <TextView
          android:id="@+id/arrival_time"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/arrival_date"
          android:layout_toRightOf="@id/plane_outbound_icon"
          android:gravity="center"
          android:text="1:45p"
          android:textAlignment="center"
          android:textColor="@android:color/black"
          android:textSize="15sp" />

      </android.support.v7.widget.LinearLayoutCompat>

      <!--Expand Show-->
      <TextView
        android:id="@+id/passenger_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/left_column"
        android:layout_alignParentLeft="true"
        android:paddingTop="30dp"
        android:text="passenger_name"
        android:textAlignment="center"
        android:textSize="8pt" />


      <!--Expand Show-->
      <TextView
        android:id="@+id/passenger_1_rewards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/right_column"
        android:layout_alignParentRight="true"
        android:paddingTop="30dp"
        android:text="20138961636"
        android:textAlignment="center"
        android:textSize="8pt" />

      <!--Expand Show-->
      <TextView
        android:id="@+id/passenger_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passenger_1"
        android:layout_alignParentLeft="true"
        android:paddingTop="2dp"
        android:text="passenger_name"
        android:textAlignment="center"
        android:textSize="8pt" />


      <!--Expand Show-->
      <TextView
        android:id="@+id/passenger_2_rewards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passenger_1_rewards"
        android:layout_alignParentRight="true"
        android:paddingTop="2dp"
        android:text="20644826414"
        android:textAlignment="center"
        android:textSize="8pt" />

      <!--Expand Show-->
      <TextView
        android:id="@+id/passenger_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passenger_2"
        android:layout_alignParentLeft="true"
        android:paddingTop="2dp"
        android:text="passenger_name"
        android:textAlignment="center"
        android:textSize="8pt" />


      <!--Expand Show-->
      <TextView
        android:id="@+id/passenger_3_rewards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passenger_2_rewards"
        android:layout_alignParentRight="true"
        android:paddingTop="2dp"
        android:text="20705400026"
        android:textAlignment="center"
        android:textSize="8pt" />


    </RelativeLayout>

  </android.support.v7.widget.CardView>

</LinearLayout>