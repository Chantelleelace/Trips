<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorAccent">


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">

      <android.support.design.widget.TextInputLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:hintAnimationEnabled="true"
        app:hintTextAppearance="@style/InputField">

        <android.support.design.widget.TextInputEditText
          android:id="@+id/hotel_name_input"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Hotel"
          />

      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_gravity="center"
        app:hintAnimationEnabled="false"
        app:hintTextAppearance="@style/InputField">

        <android.support.design.widget.TextInputEditText
          android:id="@+id/hotel_phone_input"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:hint="Phone"
          android:inputType="phone"
          />

      </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:orientation="horizontal">

      <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_gravity="center"
        app:hintAnimationEnabled="false"
        app:hintTextAppearance="@style/InputField">

        <android.support.design.widget.TextInputEditText
          android:id="@+id/hotel_address_input"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:hint="Address"
          />

      </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">

      <android.support.design.widget.TextInputLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_gravity="center"
        app:hintAnimationEnabled="false"
        app:hintTextAppearance="@style/InputField">

        <android.support.design.widget.TextInputEditText
          android:id="@+id/hotel_city_input"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:hint="City"
          android:inputType="text"
          />

      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_gravity="center"
        app:hintAnimationEnabled="false"
        app:hintTextAppearance="@style/InputField">

        <android.support.design.widget.TextInputEditText
          android:id="@+id/hotel_state_input"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:hint="State"
          android:inputType="text"
         />

      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_gravity="center"
        app:hintAnimationEnabled="false"
        app:hintTextAppearance="@style/InputField">

        <android.support.design.widget.TextInputEditText
          android:id="@+id/hotel_zip_input"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:hint="Zip"
          android:inputType="number"
          android:maxLength="5"/>

      </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:hintAnimationEnabled="false"
        app:hintTextAppearance="@style/InputField">

        <android.support.design.widget.TextInputEditText
          android:id="@+id/hotel_name_on_reservation_input"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:hint="Name on Reservation"
          android:textAllCaps="true"
          />

      </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:orientation="horizontal">

      <android.support.design.widget.TextInputLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_gravity="center"
        app:hintTextAppearance="@style/InputField"
        >

        <android.support.design.widget.TextInputEditText
          android:id="@+id/check_in_date_input"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:focusable="false"
          android:hint="Check In"
          />

      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_gravity="center"
        app:hintAnimationEnabled="false"
        app:hintTextAppearance="@style/InputField">

        <android.support.design.widget.TextInputEditText
          android:id="@+id/check_out_date_input"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:focusable="false"
          android:hint="Check Out"
         />

      </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">

      <android.support.design.widget.TextInputLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:hintAnimationEnabled="false"
        app:hintTextAppearance="@style/InputField">

        <android.support.design.widget.TextInputEditText
          android:id="@+id/hotel_confirmation_input"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:hint="Confirmation"
          android:inputType="number"
          android:textSize="14dp"
          />

      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:hintAnimationEnabled="false"
        app:hintTextAppearance="@style/InputField">

        <android.support.design.widget.TextInputEditText
          android:id="@+id/hotel_rewards_input"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:hint="Rewards"
          android:inputType="number"
          />

      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:hintAnimationEnabled="false"
        app:hintTextAppearance="@style/InputField">

        <android.support.design.widget.TextInputEditText
          android:id="@+id/hotel_cost_input"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:hint="Cost/night"
          android:inputType="numberDecimal"
          android:textSize="15dp"
          />

      </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:hintAnimationEnabled="false"
        app:hintTextAppearance="@style/InputField">

        <android.support.design.widget.TextInputEditText
          android:id="@+id/hotel_room_type_input"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:hint="Room Type"
          />

      </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <Button
      android:id="@+id/submit_hotel"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:backgroundTint="@android:color/transparent"
      android:text="Submit"
      android:textAlignment="center"/>

  </LinearLayout>
</ScrollView>
